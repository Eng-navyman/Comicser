<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/card_margin_value_half"
  android:elevation="@dimen/cardview_default_elevation"
  android:orientation="vertical"
  tools:targetApi="lollipop">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
      android:id="@+id/issue_cover"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      app:srcCompat="@drawable/dummy_issue_cover"
      tools:ignore="ContentDescription"/>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="@dimen/material_card_title_block_small_padding_vertical"
      android:paddingBottom="@dimen/material_card_title_block_small_padding_vertical"
      android:paddingStart="@dimen/material_card_title_block_padding_horizontal"
      android:paddingEnd="@dimen/material_card_title_block_padding_horizontal"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/issue_name"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/material_card_title_block_small_text_size"
        tools:text="The Walking Dead #169"/>

    </LinearLayout>
  </LinearLayout>

</android.support.v7.widget.CardView>